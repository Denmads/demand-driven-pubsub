{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "AppConfig": {
    "Mqtt": {
      "Host": "mqtt",
      //"Host": "127.0.0.1",
      "Port": "1883",
      "TopicPrefix": "ddps/system"
    },

    "Backend": {
      "Host": "0.0.0.0",
      "Port": 0,
      "ClusterName": "DemandDrivenApp",
      "EnableActorFrameworkLogging": true,
      "ActorFrameworkMinimumLogLevel": "Information",

      "HealthMonitor": {
        "HeartbeatIntervalMilli": 100000,
        "MinimumTimeForDeadClient": 60,
        "HeartbeatTopic":  "/heartbeat"
      }
    }
  }
}
